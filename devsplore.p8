--personnage principal

function create_player()
p={
	x=3,
	y=15,
	sprite=1
}
end

function draw_player()
	spr(p.sprite,p.x*8,p.y*8)
end

function player_movement()
	newx=p.x
	newy=p.y

	if(btn(➡️)) newx+=1
	if(btn(⬅️)) newx-=1
	if(btn(⬇️)) newy+=1
	if(btn(⬆️)) newy-=1

	if not check_flag(0,newx,newy) then
		p.x=newx
		p.y=newy
	end
end
